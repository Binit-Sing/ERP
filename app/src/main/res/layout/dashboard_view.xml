<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/login_custom_border"
>
    <RelativeLayout
            android:id="@+id/Dfee_particulars"
            android:layout_marginLeft="@dimen/size_5_dp"
            android:layout_marginRight="@dimen/size_5_dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_120_dp"
            android:paddingTop="@dimen/size_5_dp"
            android:elevation="@dimen/size_10_dp"
            android:gravity="center">

        <LinearLayout
                android:id="@+id/fee_particular"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:layout_weight="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_5_dp"
                    android:src="@drawable/degree"
                    />

            <TextView
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="@dimen/size_15_sp"
                    android:textStyle="bold"
            />
        </LinearLayout>
        <RelativeLayout
                android:layout_below="@+id/fee_particular"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_20_dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/opaque_white"
                android:gravity="center">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_14_sp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:text="VIEW ALL"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>